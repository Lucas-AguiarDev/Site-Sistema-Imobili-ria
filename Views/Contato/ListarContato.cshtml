@model ICollection<Contato>

@{
    Layout = "_LayoutColaborador";
}

@{
    ViewData["Title"] = "Listar Contatos";
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            @if (Model.Count > 0)
            {
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Telefone</th>
                        <th>Email</th>
                        <th>Assunto</th>
                        <th>Mensagem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Contato c in Model)
                    {
                        <tr>
                            <td>@c.Id</td>
                            <td>@c.Nome</td>
                            <td>@c.Telefone</td>
                            <td>@c.Email</td>
                            <td>@c.Assunto</td>
                            <td>@c.Mensagem</td>
                            <td><a href="/Contato/excluirContato?id=@c.Id">Contato Realizado</a></td>
                        </tr>
                    }
                </tbody>
            }

            else
            {
                <p>Nenhum registro encontrado</p>
            }
        </table>
    </div>
</div>
