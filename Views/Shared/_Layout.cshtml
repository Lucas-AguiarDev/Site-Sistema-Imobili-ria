<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVImoveis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- fontawsome -->
    <script src="https://kit.fontawesome.com/1a8d8bc7ce.js" crossorigin="anonymous"></script>
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-primary">
            <div class="container">
                <h2 style="font-size: 3em;">
                    <a asp-controller="Home" asp-action="Index" class="nav-link"><strong
                            style="color: yellow;">MV</strong><strong style="color: white;">Imobiliária</strong></a>
                </h2>

                <button class="navbar-toggler" data-toggle="collapse" data-target="#nav-principal">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse font-weight-bold" id="nav-principal">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link text-white">Home</a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Clientes" class="nav-link text-white">Clientes</a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="QuemSomos" class="nav-link text-white">Quem somos</a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Contato" asp-action="Contato" class="nav-link text-white">Contato</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bt-5 footer bg-primary">
        <div class="container">
            <div class="row">
                <div class="col-md-10 d-flex align-self-center">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3550.947395651855!2d-48.60934198544228!3d-27.126466808685425!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94d8b1f92202ce5d%3A0x5ef0ef7b6e7e6bbb!2sMV%20investimentos%20Imobili%C3%A1rios!5e0!3m2!1spt-BR!2sbr!4v1625113447430!5m2!1spt-BR!2sbr"
                        width="1000" height="300" style="border: 0; margin: 10px;" allowfullscreen=""
                        loading="lazy"></iframe>
                </div>

                <div class="col-md-2 d-none d-md-block align-self-center font-weight-bold">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link text-white">Home</a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Clientes" class="nav-link text-white">Clientes</a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="QuemSomos" class="nav-link text-white">Quem somos</a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Contato" asp-action="Contato" class="nav-link text-white">Contato</a>
                        </li>
                    </ul>
                </div>


            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
