@model Colaborador

@{
    Layout = "_LayoutColaborador";
}

@{
    ViewData["Title"] = "Login";
}

<section>
    <form asp-action="Login" method="POST">

        <h1 class="mb-5 mt-5 text-center display-4">Login</h1>

        <div>
            <p>
                <label asp-for="Login" class="col-sm-1 form-label">Login:</label>
                <input asp-for="Login" class="col-sm-10">
            </p>
        </div>

        <br>

        <div>
            <p>
                <label asp-for="Senha" class="col-sm-1 form-label">Senha:</label>
                <input asp-for="Senha" type="password" class="col-sm-10">
                
            </p>
        </div>
        <br>

        <p id="pMensagem" style="color: red; text-align: center;">
            @ViewBag.Erro
        </p>

        <p class="text-center">
            <input type="submit" value="Entrar" class="mb-5 btn-primary col-sm-3 ">
        </p>

    </form>
</section>