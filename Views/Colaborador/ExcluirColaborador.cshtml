@model Colaborador
@{
    Layout = "_LayoutColaborador";
}

@{
    ViewData["Title"] = "Excluir Colaborador";
}

<h1 class="text-danger">ALERTA!</h1>
<H2>Tem certeza que deseja excluir o usuário @Model.Nome (@Model.Login)?</H2>
<p class="text-alert">A exclusão é irreversível</p>

<form action="ExcluirColaborador" method="post">
    <input type="hidden" name="id" value="@Model.Id">

    <input name="decisao" type="submit" value="CANCELAR">
    <input name="decisao" type="submit" value="EXCLUIR">
</form>